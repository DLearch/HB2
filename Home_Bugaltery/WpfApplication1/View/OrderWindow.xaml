<Window x:Class="WpfApplication1.View.OrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication1.ViewModel"
        mc:Ignorable="d"
        Title="OrderWindow" Height="300" Width="300" MinWidth="200" MinHeight="180">

    <Window.DataContext>
        <local:OrderWindowViewModel></local:OrderWindowViewModel>
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="90"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="90"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Label Content="Категорія: " VerticalAlignment="Center"/>
        <ComboBox VerticalAlignment="Center" 
                  ItemsSource="{Binding ComboBoxCategoriesItemsSource}"
                  SelectedItem="{Binding ComboBoxCategoriesSelectedItem}"
                  SelectedIndex="{Binding ComboBoxCategoriesSelectedIndex}"
                  DisplayMemberPath="Name"
                  Grid.Column="1" Margin="10, 0" Grid.ColumnSpan="3"/>

        <Label Content="Користувач: " 
               VerticalAlignment="Center" Grid.Row="1"/>
        <ComboBox VerticalAlignment="Center" 
                  ItemsSource="{Binding ComboBoxUsersItemsSource}"
                  SelectedItem="{Binding ComboBoxUsersSelectedItem}"
                  SelectedIndex="{Binding ComboBoxUsersSelectedIndex}"
                  DisplayMemberPath="Name"
                  Grid.Column="1" Grid.Row="1"
                   Margin="10, 0" Grid.ColumnSpan="3"/>

        <Label Content="Дата: " 
               VerticalAlignment="Center" Grid.Row="2"/>
        <DatePicker SelectedDate="{Binding DatePickerDateSelectedDate}" Grid.Column="1" Grid.Row="2" 
                    VerticalAlignment="Center" Margin="10, 0" Grid.ColumnSpan="3"/>

        <Label Content="Ціна: " 
               VerticalAlignment="Center" Grid.Row="3"/>
        <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding TextBoxPriceText}"
                 VerticalAlignment="Center" Margin="10, 0" Grid.ColumnSpan="3"/>

        <Label Content="Опис: " Grid.Row="4"
               VerticalAlignment="Center"/>
        <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding TextBoxDescriptionText}"
                 VerticalAlignment="Center" Margin="10, 0" Grid.ColumnSpan="3"/>

        <Button Grid.Row="5" 
                VerticalAlignment="Center" Command="{Binding OkCommand}"
                Content="Ок"  Margin="10, 0" Grid.ColumnSpan="2"/>
        <Button Grid.Row="5" Grid.Column="2"
                VerticalAlignment="Center" IsCancel="True"
                Content="Скасувати" Margin="10, 0" Grid.ColumnSpan="2"/>
    </Grid>
</Window>
